@import "materialize";

.header {
  width: 100%;
  margin: 0 auto;
  overflow: hidden;
  height: 180px;
  border-bottom: 1px solid #DEDEDE;
  //= depend_on_asset "img02.png"
  background: url('<%= asset_path("img02.png") %>');
}

.header p {
  padding: 0px 0px 0px 0px;
  margin-top: -30px;
  text-align: center;
  text-transform: uppercase;
  font-family: 'Oswald', sans-serif;
  font-size: 16pt;
  font-weight: 200;
  color: #616161;
  line-height: 120%;
}

.header h1 a {
  display: block;
  padding: 0px 0px 0px 0px;
  letter-spacing: -2px;
  text-align: center;
  text-decoration: none;
  text-transform: lowercase;
  font-family: 'Petit Formal Script', cursive;
  font-size: 40pt;
  font-weight: 300;
  color: #000000;
  padding-bottom: 0;
}

.form-container {
  padding: 50px 50px 50px 50px
}

.form-labels p {
  font-size: 1rem;
  color: #9e9e9e;
}

body .form-descriptions {
  text-align: center;
  vertical-align: baseline;
  font-size: 13px;
  color: #c5bca4;
  font-style: italic;
}

body .file-button {
  background-color: #C5992A;
}

.lower-row {
  margin-top: 30px;
}

body .lift-row-bottom  {
  margin-bottom: 0px;
}

.icons {
  width: 30px;
  padding: 0;
  height: auto;
}

body .icon-div {
  margin-right: -35px;
  margin-top: 30px;
}

@media (max-width: 800px) {
  .header {
    padding-left: 20px;
    padding-right: 20px;
  }

}